<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_size"
    android:padding="@dimen/spacing_normal_16"
    android:background="@android:color/white">

    <ru.skillbranch.devintensive.ui.custom.AvatarImageView
        android:id="@+id/iv_avatar_archive"
        android:layout_width="@dimen/avatar_item_size"
        android:layout_height="@dimen/avatar_item_size"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_archive_black_18dp"
        android:background="@color/color_gray_light"
        android:layout_marginRight="@dimen/spacing_normal_16"/>

    <TextView
        android:id="@+id/tv_title_archive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_primary"
        android:fontFamily="sans-serif-medium"
        android:textSize="14sp"
        android:layout_toRightOf="@id/iv_avatar_archive"
        android:text="@string/chat_archive_title"/>

    <TextView
        android:id="@+id/tv_author_archive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_primary"
        android:textSize="14sp"
        android:layout_toRightOf="@id/iv_avatar_archive"
        android:layout_marginRight="@dimen/spacing_tiny_4"
        tools:text="John Doe"
        android:layout_below="@id/tv_title_archive"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/tv_message_archive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_gray_dark"
        android:textSize="14sp"
        android:layout_toRightOf="@id/tv_author_archive"
        android:layout_toLeftOf="@id/tv_counter_archive"
        android:layout_marginRight="@dimen/spacing_normal_16"
        tools:text="Когда я проходил интенсив я охереневал от происходящего"
        android:layout_below="@id/tv_title_archive"/>

    <TextView
        android:id="@+id/tv_counter_archive"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/counter_size"
        android:minWidth="@dimen/counter_size"
        android:textSize="10sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="@dimen/spacing_tiny_4"
        android:paddingRight="@dimen/spacing_tiny_4"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_counter"
        tools:text="11"/>

</RelativeLayout>